<br />

<h1 class="text-center"><strong><%= current_user.name %></strong></h1>
<%= image_tag("#{current_user.image}", class: "rounded mx-auto d-block", style: "width: 220px; margin-top: 10px;") %>

<br/>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Biography</h5>
        <h6 class="card-subtitle mb-2 text-muted">Tell potential tutors or pupils a little about yourself.</h6>
        <p class="card-text"><%= current_user.bio %></p>
        <%= link_to "Edit your bio", "/users/#{current_user.id}/edit", class: "card-link", method: "get" %>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>

<div class="card" style="margin-top:15px;">
  <div class="card-body">
    <h1 class="card-title">Searches</h1>
    <h6 class="card-subtitle mb-2 text-muted">Tutor Searches</h6>
    <% @my_tutor_searches.each do |post| %>
      <div class="card-text">
        <%= link_to "[#{post.number.subject.name} #{post.number.name}] #{post.title}", tutor_search_path(post) %>
        <%= link_to "Delete", destroy_tutor_search_path(post), method: :delete, data: {confirm: "Are you sure you want to delete this?"}%>
      </div>
    <% end %>
    <br/>
    <h6 class="card-subtitle mb-2 text-muted">Pupil Searches</h6>
    <% @my_tutee_searches.each do |post| %>
      <div class="card-text">
        <%= link_to "[#{post.number.subject.name} #{post.number.name}] #{post.title}", tutee_search_path(post) %>
	<%= link_to "Delete", destroy_tutee_search_path(post), method: :delete, data: {confirm: "Are you sure you want to delete this?"}%>
      </div>
    <% end %>
    <br/>
    <%= link_to 'Submit New Searches', subjects_path %>
  </div>
</div>

<div class="card" style="margin-top:15px;">
  <div class="card-body">
    <h1 class="card-title">Requests</h1>
    <h6 class="card-subtitle mb-2 text-muted">Request Sent</h6>
    <% @sent_requests.each do |request| %>
      <div class="card-text">
        <%= link_to "[#{request.number.subject.name} #{request.number.name}] #{request.title}", request_path(request) %>
        <%= link_to "Delete", destroy_request_path(request), method: :delete, data: {confirm: "Are you sure you want to delete this?"}%>
      </div>
    <% end %>
    <br/>
    <h6 class="card-subtitle mb-2 text-muted">Request Received</h6>
    <% @received_requests.each do |request| %>
      <div class="card-text">
        <%= link_to "[#{request.number.subject.name} #{request.number.name}] #{request.title}", request_path(request) %>
      </div>
    <% end %>
  </div>
</div>

<br/><br/>


