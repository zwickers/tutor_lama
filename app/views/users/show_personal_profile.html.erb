<h1><strong><%= current_user.name %></strong></h1>
<%= image_tag("#{current_user.image}", {:style => "width:75px;"}) %>

<h2>Bio:</h2>
<p><%= current_user.bio %> </p>
<%= link_to "Edit your bio", "/users/#{current_user.id}/edit", method: "get" %>

<h2>Posts:</h2>
<table>
  <tr>
    <th>My Tutor Searches</th>
  </tr>

  <% @my_tutor_searches.each do |post| %>
    <tr>
      <td><%= link_to "#{post.title}", tutor_search_path(post) %></td>
    </tr>
  <% end %>
</table>

<table>
  <tr>
    <th>My Tutee Searches</th>
  </tr>

  <% @my_tutee_searches.each do |post| %>
    <tr>
      <td><%= link_to "#{post.title}", tutee_search_path(post) %></td>
    </tr>
  <% end %>
</table>

<h2>Comments:</h2>

<%= link_to 'Back to main page', root_path %>
