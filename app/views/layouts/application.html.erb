<!DOCTYPE html>
<html>
<head>
  <title>TutorLama</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="container">
		<div id="user_nav">
			<% if current_user %>
				Signed in as <strong><%= link_to current_user.name, users_me_path %></strong>
				<%= link_to "Sign out", "/signout", id: "sign_out", method: "delete" %>
			<% else %>
				<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", method: "get" %>
			<% end %>
		</div>
	</div>
	<% flash.each do |name,msg| %>
		<%= content_tag :div, msg, id: "flash_#{name}" %>
	<% end %>
	<%= yield %>
</body>
</html>
