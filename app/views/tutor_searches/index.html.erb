<h1>Active Tutor Searches</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Details</th>
    <th></th>
  </tr>

  <% @tutor_searches.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', tutor_search_path(post) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Submit New Tutor Search', new_tutor_search_path %>
